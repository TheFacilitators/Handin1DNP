@page "/AddAdult"
@using Models
@using Handin1.Data

@inject IAdultData AdultData
@inject NavigationManager NavMag
<h3>AddAdult</h3>

<EditForm Model="@NewAdult" OnValidSubmit="@AddNewAdult">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group"> First name:<br/>
        <InputTextArea @bind-Value="NewAdult.FirstName"/>
    </div>
    <div class="form-group"> Last name:<br/>
        <InputTextArea @bind-Value="NewAdult.LastName"/>
    </div>
    <div class="form-group"> Age:<br/>
        <InputNumber @bind-Value="NewAdult.Age"/>
    </div>
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
</EditForm>

@code {

    private Adult NewAdult = new Adult();

    private void AddNewAdult() {
        AdultData.AddAdult(NewAdult);
        NavMag.NavigateTo("/Adults");
    }

}